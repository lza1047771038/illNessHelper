<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tweet_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/tweet_image_card"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/tweet_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/prompt" />
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tweet_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/linearxxx"
                android:layout_alignParentTop="true"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="3dp"
                android:paddingStart="10dp"
                android:text="标题"
                android:textColor="#333"
                android:textSize="16dp" />

            <LinearLayout
                android:id="@+id/linearxxx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="13dp"
                android:paddingStart="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tweet_auther"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="作者"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tweet_visit_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="浏览量"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="浏览"
                    android:textSize="12sp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dbdbdb" />
</RelativeLayout>
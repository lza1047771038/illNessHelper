<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"><!--被按下时-->
        <shape android:shape="rectangle"><!--默认为矩形，可以设置为矩形（rectangle）、椭圆形(oval)、线性形状(line)、环形(ring)-->
            <solid android:color="#9A8BC34A"/>       <!--内部填充色-->
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item android:state_pressed="false"><!--被按下时-->
        <shape android:shape="rectangle"><!--默认为矩形，可以设置为矩形（rectangle）、椭圆形(oval)、线性形状(line)、环形(ring)-->
            <solid android:color="#8BC34A"/>       <!--内部填充色-->
            <corners android:radius="5dp"/>
        </shape>
    </item>
</selector>
